<!-- The main template of the Home Page -->

<div class="Welcome">
    <h1 class="welcomeMsg"> Welcome To BlogMe </h1>
</div>
<img src="/img/header.jpeg" alt="" class="welcomeImg" width="960" height="639">

<section class="posts">
    <h2 class="postsHead"> Latest Posts </h2>
    <ul class="postUl">
        <% data.forEach(post => { %>
            <li>
                <a href="#">
                    <span> <%= post.title %> </span>
                    <span class="postTitleDate">  <%= post.createdAt %> </span>
                </a>
            </li>
        <% }) %>
    </ul>
    <a href="#" class="pagination">&lt; View Older Posts</a>
</section>
